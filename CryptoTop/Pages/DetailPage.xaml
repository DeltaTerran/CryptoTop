<Page x:Class="CryptoTop.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoTop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailPage" Loaded="Page_Loaded">

    <Grid>
        <Canvas>
            <Label x:Name="LName" Canvas.Top="48" FontSize="22" FontStyle="Italic"></Label>
            <Button Content="Back" Width="80" Click="Button_Click"></Button>
            <Label x:Name="Price" Canvas.Top="96" FontSize="22">Price</Label>
            <Label x:Name="Volume" Canvas.Top="128" FontSize="22">Volume</Label>
            <Label x:Name="PriceChange" Canvas.Top="160" FontSize="22">PriceChange</Label>
            <Label x:Name="Market" Canvas.Top="192" FontSize="22">Market</Label>
            <Label x:Name="PriceInfo" Canvas.Top="96" Canvas.Left="150" FontSize="22"></Label>
            <Label x:Name="VolumeInfo" Canvas.Top="128" Canvas.Left="150" FontSize="22"></Label>
            <Label x:Name="PriceChangeInfo" Canvas.Top="160" Canvas.Left="150" FontSize="22"></Label>
            <Label x:Name="MarketInfo" Canvas.Top="192" Canvas.Left="150" Canvas.Right="1" FontSize="22" MouseDoubleClick="MarketInfo_MouseDoubleClick" Foreground="Blue" Cursor="Hand"></Label>
        </Canvas>
    </Grid>
</Page>
