<Page x:Class="CryptoTop.APIPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoTop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="APIPage">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">
            <Label HorizontalAlignment="Left" VerticalAlignment="Top" Content="CoinCapApiKey"></Label>
            <TextBox x:Name="ApiKeyTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,55">
            <Button x:Name="OkBtn" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Ok" Click="OkBtn_Click" Width="100" Margin="0,0,92,0" ></Button>
            <Button x:Name="GoBackBtn" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Cancel" Click="GoBackBtn_Click" Width="100"></Button>
        </StackPanel>
        
    </Grid>
</Page>
